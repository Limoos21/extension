{
    "manifest_version": 3,
    "name": "Twitch Points",
    "version": "1.0.8",
    "description": "Награды за просмотр стримов",
    "icons": {
        "128": "img/logo.png"
    },
    "background": {
        "service_worker":"js/background.js"
    },
    "permissions":[
        "tabs",
        "cookies",
        "storage"
    ],
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ],
    "action":{
        "default_icon": "img/logo.png",
        "default_popup":"forms.html"
    },
    "action2":{
        "default_icon": "img/logo.png",
        "default_popup":"popup2.html"
    },
    "content_scripts": [
        {
            "run_at":"document_end",
            "matches": ["<all_urls>"],
            "js": ["js/jquery.js","js/content.js"]
        }
    ]
}
 